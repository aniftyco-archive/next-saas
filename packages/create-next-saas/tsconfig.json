{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "pretty": true,
    "jsx": "react-jsx",
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
